<% provide(:title, "Вход") %>

<div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4 login-box">
	<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>
 	<%= form_for(:session, url: sessions_path) do |f| %>
 	<div class="input-group">
 		<span class="input-group-addon"><span class="fa fa-user"></span></span>
 		<%= f.text_field :name, placeholder: "Имя пользователя", autofocus: true, class: "form-control input-sm" %>
 	</div>
 	<div class="input-group list">
 		<span class="input-group-addon"><span class="fa fa-lock"></span></span>
 		<%= f.password_field :password, placeholder: "Пароль", class: "form-control input-sm" %>
 	</div>
 	<div class="input-group list pull-right">
 			<%= f.submit "Войти", class: "btn btn-sm btn-primary" %>
 	</div>
 	<% end %>
</div>