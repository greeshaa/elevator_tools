<% provide(:title, "Вход") %>
<div class="form-signin">
 	<%= form_for(:session, url: sessions_path) do |f| %>
 	<%= f.text_field :name, placeholder: "Имя пользователя", autofocus: true, class: "form-control" %>	
 	<%= f.password_field :password, placeholder: "Пароль", class: "form-control" %>	
 	<%= f.submit "Войти", class: "btn btn-lg btn-primary btn-block" %>
 	<% end %>
</div>