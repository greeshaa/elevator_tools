<% provide(:title, "Редактирование профиля") %>
<h1>Редактирование профиля</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Логин:" %>
      <%= f.text_field :name %>

      <%= f.label :runame, "Имя пользователя:" %>
      <%= f.text_field :runame %>

      <%= f.label :email, "Адрес электронной почты:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль:" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля:" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>