<% provide(:title, @streetkind + " " + @street.name) %>
<% provide(:header, @streetkind + " " + @street.name) %>
<div class="row">
  <div class="col-md-12">
    <table class="table table-condensed table-striped search_result">
      <caption>Доступные адреса:</caption>
      <thead>
        <tr>
          <td>Адрес</td>
          <td>Лифты</td>
        </tr>
      </thead>
      <tbody>
        <%= render @builds %>
      </tbody>
    </table>
    <div class="btn-group btn-group-xs">
      <%= link_to "Список всех улиц", streets_path, class: "btn btn-default" %>
      <%= link_to "Редактировать улицу", edit_street_path, class: "btn btn-default" %>
      <%= link_to "Добавить здание", add_build_path, class: "btn btn-default" %>
    </div>
  </div>
</div>