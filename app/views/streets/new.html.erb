<% provide(:title, 'Адреса | Добавление улицы') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for(@street, html: { method: :post, class:"form-horizontal" } ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>Добавление улицы</legend>
        <div class="form-group">
          <%= f.label :city_id, "Город", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.select :city_id, options_from_collection_for_select(@city, :id, :name), {}, 
          													{class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :street_kind_id, "Тип", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.select :street_kind_id, options_from_collection_for_select(@streetkind, :id, :name), {}, 
          													{class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name, "Название", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control input-sm", placeholder: "Партизанская" %>
          </div>
        </div>
        <div class="form-group ">
          <div class="col-md-6 col-md-offset-4">
            <%= link_to " Отменить ", streets_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>