<% provide(:title, 'Добавление здания') %>
<%= form_for(@build, html:{class:"col-md-10 col-md-offset-1", role:"form"} ) do |f| %>
<legend>Добавление здания</legend>
<div class="input-group input-group-sm col-md-7">
  <label class="sr-only" for="name">name</label>
  <%= f.text_field :name, class: "form-control", placeholder: "Номер здания" %>
  <div class="input-group-btn">


      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :street_id, "Улица:" %>
      <%= f.select :street_id, options_from_collection_for_select(@streets, :id, :name) %>

      <%= f.label :porch_count, "Количество подъездов:" %>
      <%= f.text_field :porch_count %>

      <%= f.label :node_id, "Улица:" %>
      <%= f.select :node_id, options_from_collection_for_select(@nodes, :id, :name) %>

      <%= f.submit "Добавить", class: "btn btn-default" %>
  </div>
</div>
<% end %>