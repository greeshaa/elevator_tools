<% provide(:title, 'Добавление здания') %>
<h1>Добавление здания</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@build) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :street_id, "Улица:" %>
      <%= f.select :street_id, options_from_collection_for_select(@streets, :id, :name) %>

      <%= f.label :name, "Номер здания:" %>
      <%= f.text_field :name %>

      <%= f.submit "Добавить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>