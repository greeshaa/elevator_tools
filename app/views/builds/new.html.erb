<% provide(:title, 'Добавление здания') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for(@build, html: { method: :post, class:"form-horizontal" } ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>Добавление здания</legend>
        <div class="form-group">
          <%= f.label :street_id, "Улица", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.select :street_id, options_from_collection_for_select(@streets.order(:name), :id, :name), {}, { class:"form-control input-sm" } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name, "Номер здания", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control input-sm", placeholder: "Например: 8/1" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :porch_count, "Кол-во подъездов", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :porch_count, class: "form-control input-sm", placeholder: "Например: 8" %>
          </div>
        </div>
        <div class="form-group ">
          <div class="col-md-10 col-md-offset-4">
            <%= link_to " Отменить ", address_index_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>