<% provide(:title, 'Редактирование стоимости') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for(@price, html:{class:"form-horizontal", role:"form"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend><%= @price.title %></legend>
        <div class="form-group">
          <%= f.label :cost, "Стоимость", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :cost, autofocus: true, class: "form-control input-sm" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            <%= link_to " Отменить ", prices_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>