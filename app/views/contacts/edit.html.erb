<% provide(:title, 'Изменение данных контактного лица') %>
<div class="row">
  <div class="span6 offset3">  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for(@contact, html: {class:"form-horizontal" } ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>Изменение данных контактного лица</legend>
        <div class="form-group">
          <%= f.label :name, "Ф.И.О.:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :name, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :function, "Должность:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :function, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone_1, "Телефон №1:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :phone_1, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone_2, "Телефон №2:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :phone_2, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :e_mail, "Эл. почта:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :e_mail, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :note, "Комментарии", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_area(:note, rows: 6, placeholder: "Комментарии", class: "form-control") %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-4">
            <%= link_to " Отменить ", :back, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>