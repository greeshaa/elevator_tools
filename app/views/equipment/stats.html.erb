<% provide(:title, 'Оборудование | Склад') %>
<p class="lead">Статистика использования оборудования</p>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_tag(equipment_index_path, method: "get", role:"form") do %>
    <div class="input-group input-group-sm">
      <label class="sr-only" for="search">equipment</label>
      <%= search_field_tag(:search, params[:search], {class:"form-control", placeholder:"Поиск по серийному номеру или названию оборудования"} ) %>
      <div class="input-group-btn">
        <%= submit_tag("Найти", class:"btn btn-default") %>
        <div class="btn-group">
          <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
            Склад <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to "Добавить устройство", add_equipment_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Исправное", equipment_store_path %></li>
            <li><%= link_to "Неисправное", equipment_broken_path %></li>
            <li><%= link_to "Статистика", equipment_stats_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Типы", equipment_lists_path %></li>
            <li><%= link_to "Категории", equipment_types_path %></li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="col-md-10 col-md-offset-1 list">
	<table class="table table-striped table-condensed search_result">
		<tr>
			<td></td>
			<td>Всего</td>
			<td>В работе</td>
			<td>Склад</td>
			<td>Неисправно</td>
			<td>Ремонт</td>
		</tr>
		<tr>
			<td>Общее количество оборудования</td>
			<td><%= @equip_all %></td>
			<td><%= @equip_work %></td>
			<td><%= @equip_store %></td>
			<td><%= @equip_broken %></td>
			<td><%= @equip_service %></td>
		</tr>
		<% @equip_count.each do |ec| %>
		<tr>
			<td><%= link_to ec[:name], equipment_list_path(ec[:equipment]) %></td>
			<td><%= ec[:all] %></td>
			<td><%= ec[:work] %></td>
			<td><%= ec[:store] %></td>
			<td><%= ec[:broken] %></td>
			<td><%= ec[:service] %></td>
		</tr>
		<% end %>
	</table>
</div>