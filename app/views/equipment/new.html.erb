<% provide(:title, 'Добавление устройства') %>
<h1>Добавление устройства</h1>
<div class="row">
  <div class="col-md-5">
      
        <%= form_for(@equipment) do |f| %>
        <div class="form-group">
        <%= render 'shared/error_messages', object: f.object %>
        </div>
        <div class="form-group">
        <%= f.label :equipment_list_id, "Устройство:" %>
        <%= f.select :equipment_list_id,  options_from_collection_for_select(@e_lists, :id, :name), class: "form-control" %>
        </div>
        <div class="form-group">
        <%= f.text_field :factory_sn, placeholder: "Серийный номер", autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.text_area(:notes, rows: 6, placeholder: "Описание", class: "form-control") %>
       </div>
        <%= f.submit "Добавить", class: "btn btn-xs btn-default"  %>
      <% end %>
      
 </div>
</div>