<% provide(:title, 'Оборудование') %>
<%= form_tag(equipment_index_path, method: "get", class: "form-inline col-md-10 col-md-offset-1", role:"form") do %>
<legend>Оборудование</legend>
<div class="input-group input-group-sm col-md-8">
	<label class="sr-only" for="search">equipment</label>
	<%= search_field_tag(:search, params[:search], {class:"form-control", placeholder:"Поиск по серийному номеру или названию оборудования"} ) %>
	<div class="input-group-btn">
    <%= submit_tag("Найти", class:"btn btn-default") %>
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
       	Склад <span class="caret"></span>
 			</button>
 			<ul class="dropdown-menu">
 				<li><%= link_to "Добавить устройство", add_equipment_path %></li>
 				<li class="divider"></li>
				<li><%= link_to "Исправное", equipment_store_path %></li>
				<li><%= link_to "Неисправное", equipment_broken_path %></li>
				<li><%= link_to "Статистика", equipment_stats_path %></li>
				<li class="divider"></li>
				<li><%= link_to "Типы", equipment_lists_path %></li>
				<li><%= link_to "Категории", equipment_types_path %></li>
 			</ul>
  	</div>
	</div>
</div>
<% end %>
<% unless @lifts.nil? %>
<div class="col-md-10 col-md-offset-1">
<table class="table table-striped table-bordered table-condensed">
	<% if @equipment.empty? %>
        <p class="lead">Оборудование удовлетворяющее запросу не найдено.</p>
    <% else %>
    <%= render @equipment %>
    <% end %>
</table>
</div>
<% end %>