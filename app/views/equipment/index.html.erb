<% provide(:title, 'Оборудование') %>
<p class="lead">Учет используемого оборудования, типы и описание.</p>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
  	<%= form_tag(equipment_index_path, method: "get", role:"form") do %>
  	<div class="input-group input-group-sm">
  		<label class="sr-only" for="search">equipment</label>
  		<%= search_field_tag(:search, params[:search], {class:"form-control", placeholder:"Поиск по серийному номеру или названию оборудования"} ) %>
  		<div class="input-group-btn">
  			<%= submit_tag("Найти", class:"btn btn-default") %>
			</div>
		</div>
		<% end %>
	</div>
</div>

<% unless @equipment.nil? %>
<div class="col-md-10 col-md-offset-1 list">
<table class="table table-striped table-bordered table-condensed">
	<% if @equipment.empty? %>
        <p class="lead">Оборудование удовлетворяющее запросу не найдено.</p>
    <% else %>
    <%= render @equipment %>
    <% end %>
</table>
</div>
<% end %>