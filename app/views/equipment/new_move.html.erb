<% provide(:title, 'Перенос устройства на узел') %>
<h1>Перенос устройства на узел</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@node) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :node_id, "Узел назначания:" %>
        <%= f.select :node_id,  options_from_collection_for_select(@target, :id, :name), class: "form-control" %>
        </div>

      <%= f.submit "Добавить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>