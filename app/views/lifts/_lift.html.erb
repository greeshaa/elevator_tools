<tr>
	<% if lift.porch.nil? %>
  	<td>
   		<span class="label label-warning">Нет информации о расположении лифта</span>
   	</td>
   	<td>
   	</td>
  <% else %>
  	<% if lift.node.id == 1 %>
  	<td>
   		<%= link_to lift.porch.build.street.name + ', '  + lift.porch.build.name + ' - '  + lift.porch.name, lift, class: "text-muted" %>
   	</td>
    <td>
      <%= lift.regnum %>
    </td>
   	<td>
   	<%= link_to lift.node.name, lift.node, class: "text-muted" %>
   	</td>
   	<% else %>
   	<td>
   		<%= link_to lift.porch.build.street.name + ', '  + lift.porch.build.name + ' - '  + lift.porch.name, lift %>
   	</td>
    <td>
      <%= lift.regnum %>
    </td>
    <td>
   	<%= link_to 'УМ '  + lift.node.name, lift.node %>
   	</td>
   	<% end %>
    <% if lift.district.nil? %>
    <td></td>
    <% else %>
    <td><%= lift.district.name %></td>
    <% end %>
    <% if lift.mechanic.nil? %>
    <td></td>
    <% else %>
    <td><%= link_to lift.mechanic.name, lift.mechanic %></td>
    <% end %>
    <% if lift.introduced_at.nil? %>
      <td></td>
    <% else %>
      <% if lift.introduced_at <= (Date.today.year - 25) %>
        <% if lift.overhauls.empty? %>
        <td class="td_center text-danger">
          <%= lift.introduced_at + 25 %>
        </td>
        <% else %>
          <td class="td_center">
            <%= (lift.overhauls.last.produced_at + lift.overhauls.last.new_lifetime*365).strftime("%Y") %>
          </td>
        <% end %>
      <% else %>
      <td class="td_center">
        <%= lift.introduced_at + 25 %>
      </td>
      <% end %>
    <% end %>
    <td class="td_center">
    <% if params[:action] == 'overdue_lifts' %>
      <%= link_to '<i class="fa fa-calendar"></i>'.html_safe, new_overhaul_path + '?lift_id=' + lift.id.to_s %>
      <% @back_path = params[:action] %>
    <% else %>
      <%= link_to '<i class="fa fa-calendar"></i>'.html_safe, new_inspection_path + '?lift_id=' + lift.id.to_s %>
    <% end %>
    </td>
   <% end %>
</tr>