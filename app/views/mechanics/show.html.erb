<% provide(:title, 'Механики') %>
<p class="lead"><%= @mechanic.name %></p>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
  	<div class="panel panel-default">
        <div class="panel-heading">Сводка</div>
        <div class="panel-body">
          Всего лифтов: <%= @lcount %><br>
          Лифтов ЗАО: <%= @zlcount %><br>
          Лифтов ООО: <%= @olcount %><br>
        </div>
      </div>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
  	<div class="panel panel-default">
        <div class="panel-heading">Список закрепленных лифтов</div>
        <div class="panel-body">
          <table class="table table-striped table-condensed">
            <thead>
              <td>Адрес</td>
              <td>Район</td>
              <td>ТЛР</td>
              <td>Тип</td>
              <td>Груз-сть</td>
              <td>Остановок</td>
              <td>Дата вывода</td>
            </thead>
            <tbody>
              <%= render "mechanics/lift" %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>