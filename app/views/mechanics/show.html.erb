<% provide(:title, 'Механики') %>
<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <p class="lead"><%= @mechanic.name %></p>
    <% if @mechanic.foreman.nil? %>
    <% else %>
    <p>Прораб: <%= @mechanic.foreman.user.runame %></p>
    <% end %>
    <%= link_to "Изменить данные", edit_mechanic_path %><br>
    <%= link_to "Перезакрепить лифты", lift_move_path %><br>
    <%= link_to "Расчет ЗП", work_order_path %><br>
  </div>
  <div class="col-md-2">
    <table class="table table-striped table-condensed search_result">
      <tr>
        <td colspan=2></td>
        <td>Собственные</td>
        <td>Временные</td>
      </tr>
      <tr>
        <td>Всего:</td>
        <td><%= @allliftsum %></td>
        <td><%= @lcount %></td>
        <td><%= @templiftcount %></td>
      </tr>
      <tr>
        <td>ООО</td>
        <td><%= @oliftsum %></td>
        <td><%= @olcount %> </td>
        <td><%= @otempliftcount %></td>
      </tr>
      <tr>
        <td>ЗАО</td>
        <td><%= @zliftsum %></td>
        <td><%= @zlcount %></td>
        <td><%= @ztempliftcount %></td>
      </tr>
    </table>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_tag move_lifts_path, :method => :put, html: {class:"form-horizontal"} do %>
    <div class="panel panel-default">
      <div class="panel-heading">Список закрепленных лифтов.</div>
        <div class="panel-body">
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <td>Адрес</td>
                <td>Район</td>
                <td>ТЛР</td>
                <td>Тип</td>
                <td>Груз-сть</td>
                <td>Остановок</td>
                <td>Дата вывода</td>
              </tr>
            </thead>
            <fieldset>
            <tbody>
              <%= render "mechanics/lift" %>
            </tbody>
          </table>
          <% if @tsm.empty? %>
          <% else %>
          <table class="table table-striped table-condensed">
            <caption>Временно обслуживаемые</caption>
            <thead>
              <tr>
                <td>Адрес</td>
                <td>Район</td>
                <td>ТЛР</td>
                <td>Тип</td>
                <td>Груз-сть</td>
                <td>Остановок</td>
                <td>Дата вывода</td>
              </tr>
            </thead>
              <%= render "mechanics/templift" %>
            <tbody>
            </tbody>
          </table>
          <% end %>
          </fieldset>
        </div>
      </div>
    <% end %>
  </div>
</div>