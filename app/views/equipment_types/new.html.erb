<% provide(:title, 'Добавление категории оборудования') %>
<h1>Добавление категории оборудования</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@e_type) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Название категории:" %>
      <%= f.text_field :name %>
      <%= link_to " Отменить ", :back, class: "btn btn-default btn-sm" %>
      <%= f.submit "Добавить", class: "btn btn-mini" %>
    <% end %>
  </div>
</div>