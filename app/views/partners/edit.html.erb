<% provide(:title, 'Изменение данных о контрагенте') %>
<div class="row">
  <div class="span6 offset3">  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for(@partner, html: { method: :post, class:"form-horizontal" } ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>Изменение данных о  контрагенте</legend>
        <div class="form-group">
          <%= f.label :name, "Название:", class:"col-md-4 control-label"  %>
          <div class="col-md-6">
            <%= f.text_field :name, {class: "form-control input-sm"} %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-4">
            <%= link_to " Отменить ", partners_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>