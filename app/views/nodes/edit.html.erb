<% provide(:title, 'Редактирование УМ') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <%= form_for @node, html:{class:"form-horizontal", role:"form"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>Редактирование УМ</legend>
        <div class="form-group">
          <%= f.label :name, "Номер УМ:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.text_field :name, class: "form-control input-sm", placeholder:"УМ 254" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, "Расположение:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.text_field :description, class: "form-control input-sm", placeholder:"МП 1 подъезд (ключ на проходной)" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :street_id, "Улица:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.collection_select(:street_id, Street.order(:name), :id, :name, 
              {}, html_options = {prompt: 'Выберите улицу', class: "form-control input-sm"}) %>
              </div>
        </div>
        <div class="form-group">
          <%= f.label :build_id, "Здание:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.grouped_collection_select(:build_id, Street.order(:name), :builds, :name, :id, :name, 
              {}, html_options = {prompt: 'Выберите здание', class: "form-control input-sm"}) %>
              </div>
        </div>
        <div class="form-group">
          <%= f.label :dataport, "Порт данных:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.text_field :dataport, class: "form-control input-sm", placeholder:"44000" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :soundport, "Порт звука:", class:"col-md-2 control-label" %>
          <div class="col-md-10">
          <%= f.text_field :soundport, class: "form-control input-sm", placeholder:"44001" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
            <%= link_to " Отменить ", nodes_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>