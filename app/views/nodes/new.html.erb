<% provide(:title, 'Добавление узлового модуля') %>
<h1>Добавление узлового модуля</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@node) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Номер узлового модуля:" %>
      <%= f.text_field :name %>

      <%= f.label :description, "Расположение оборудования:" %>
      <%= f.text_field :description %>

      <%= f.label :street_id, "улица" %>
      <%= f.select (:street_id, street.name) %>

      <%= f.submit "Добавить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>