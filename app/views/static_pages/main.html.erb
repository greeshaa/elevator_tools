<% provide(:title, 'Главная') %>
  <div class="row">
   <div class="col-md-6">
     
    </div>
    <div class="col-md-5">
      <table class="table table-striped table-bordered table-condensed">
        <caption><b>Общая статистика по объектам</b></caption>
        <tr>
          <% if current_user.foreman? %>
          <td class="title_left">Количество УМ</td>
          <% else %>
          <td class="title_left"><%= link_to "Количество УМ", nodes_path %></td>
          <% end %>
          <td><%= Node.count %></td>
        </tr>
        <tr>
          <td class="title_left"><%= link_to "Количество улиц", streets_path %> </td>
          <td><%= Street.count %></td>
        </tr>
        <tr>
          <td class="title_left">Количество домов</td>
          <td><%= Build.count %></td>
        </tr>
        <tr>
          <td class="title_left">Количество подъездов</td>
          <td><%= Porch.count %></td>
        </tr>
        <tr>
          <td class="title_left"><%= link_to "Количество обслуживаемых лифтов", lifts_path %></td>
          <td><%= Lift.count %></td>
        </tr>
      </table>
    </div>
   </div>
</div>