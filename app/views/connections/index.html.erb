<% provide(:title, 'Список точек подключения') %>
<% provide(:header, 'Список точек подключения') %>
<div class="row">
  <div class="col-md-12">
  	<table class="datatable display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Адрес подключения</th>
        <th>Канал связи</th>
      </tr>
      </thead>
      <tbody>
        <% @connections.each do |c| %>
        <tr>
          <td><%= link_to c.porch.build.street.name+' '+c.porch.build.name+' '+c.porch.name, c.porch, class:"text-muted" %> </td>
          <td><%= link_to c.title, c, class:"text-muted" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>