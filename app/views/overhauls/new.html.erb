<% provide(:title, @title) %>
<p class="lead"><%= @title %></p>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
    <%= form_for(@overhaul, html:{class:"form-horizontal", role:"form"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>
          <% if @porch.nil? %>
           <p class="text-warning">Неизвестный адрес</p>
          <% else %>
            <p class="lead"><%= @city.name + ", ул. " + @street.name + ", д. " + @build.name + " - " + @porch.name %></p>
          <% end %>
        </legend>
        <div class="form-group">
          <%= f.label :produced_at, "Дата работ", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <div class="input-daterange input-group"  id="datepicker">
              <%= f.text_field :produced_at, class: "input-sm form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :kind, "Тип работ", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.select(:kind, options_for_select([['Продление срока', 'Продление срока'], ['Частичная модернизация', 'Частичная модернизация'], ['Полная модернизация', 'Полная модернизация']]), {}, {class: " form-control input-sm"} ) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :new_lifetime, "Срок эксплуатации", class:"col-md-4 control-label" %>
          <div class="col-md-6">
          <%= f.text_field :new_lifetime, class: "form-control input-sm" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, "Описание", class:"col-md-4 control-label" %>
          <div class="col-md-6">
            <%= f.text_area(:description, rows: 6, placeholder: "Комментарии", class: "form-control") %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            <%= link_to " Отменить ", overdue_lifts_path, class: "btn btn-default btn-sm" %>
            <%= f.submit "Сохранить", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>